<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="androks.simplywash.fragments.ShareFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/share_app_request"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vk"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_share_vk" />

        <ImageView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_share_facebook" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_share_twitter" />
    </LinearLayout>
</LinearLayout>
